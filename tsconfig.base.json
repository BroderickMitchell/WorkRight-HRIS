{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "types": ["node"],
    "typeRoots": [
      "./types", // Local stub packages keep the workspace compiling without a registry.
      "./node_modules/@types"
    ],
    "baseUrl": "."
  }
}
