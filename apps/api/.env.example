# Example environment settings for deploying the NestJS API to Azure App Service
NODE_ENV=production
PORT=8080

# Azure SQL Database (SQL authentication)
DATABASE_URL=sqlserver://wrhris.database.windows.net:1433;database=wrhris;user=your-db-user@wrhris;password=replace-this-with-a-secure-password;encrypt=true;trustServerCertificate=false;connectionTimeout=30

# Azure Cache for Redis (BullMQ queues)
REDIS_URL=rediss://wrhris.redis.cache.windows.net:6380?ssl=true

# Azure Storage for file attachments and exports
AZURE_STORAGE_ACCOUNT=workrightstorage
AZURE_STORAGE_CONTAINER=attachments
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=workrightstorage;AccountKey=replace-this-with-a-storage-key;EndpointSuffix=core.windows.net

# Azure Service Bus for background jobs / notifications
AZURE_SERVICEBUS_NAMESPACE=wrhris-servicebus
AZURE_SERVICEBUS_QUEUE=background-jobs
AZURE_SERVICEBUS_CONNECTION_STRING=Endpoint=sb://wrhris-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=replace-this-with-a-servicebus-key

# Observability
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=00000000-0000-0000-0000-000000000000;IngestionEndpoint=https://australiaeast-0.in.applicationinsights.azure.com/
TELEMETRY_EXPORTER=application-insights

# Localisation & feature flags
DEFAULT_LOCALE=en-AU
FEATURE_MAINTENANCE_MODE=false

# JWT / identity placeholders for Azure deployment pipelines
API_JWT_ISSUER=https://workright-api.azurewebsites.net
