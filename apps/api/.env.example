# WorkRight API environment configuration
# Copy this file to `.env` before running Prisma commands or starting the API locally.
# Default values target the docker-compose services defined in the repository root.

# PostgreSQL connection used by Prisma migrations and the application.
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workright?schema=public"

# Redis connection for BullMQ queues.
REDIS_URL="redis://localhost:6379"

# Secret for signing JWTs when running locally.
AUTH_SECRET="change-me"

# Object storage configuration (defaults align with the local MinIO container).
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minio"
S3_SECRET_ACCESS_KEY="minio123"
S3_BUCKET="workright-local"
S3_FORCE_PATH_STYLE="true"

# OpenTelemetry exporter configuration.
TELEMETRY_EXPORTER="console"

# API network configuration.
PORT=3001
DEFAULT_LOCALE="en-AU"
